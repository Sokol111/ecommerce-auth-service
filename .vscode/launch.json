    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch cmd/main.go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "/usr/local/go/bin:/home/ihsokolo/go/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
            },
            "args": []
        },
        {
            "name": "Generate Service Token",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/servicetoken",
            "cwd": "${workspaceFolder}",
            "args": [
                "-private-key=e9bc26b8119fa3ccd616e3bd05603507fd308cb30a0a99c4b858c621dd147f1beb6ebefd6a2b0a304d43c2ccca329aef0a1439d429dbe8ca9b6190622ce38341",
                "-name=product-query-service",
                "-duration=87600h"
            ]
        },
        {
            "name": "Attach to K3D (auth-service)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/src/svc",
            "port": 2351,
            "host": "localhost",
            "showLog": true,
            "trace": "verbose",
            "substitutePath": [
                {
                    "from": "/home/ihsokolo/projects/ecommerce/ecommerce-auth-service",
                    "to": "/src/svc"
                },
                {
                    "from": "/home/ihsokolo/projects/ecommerce/ecommerce-commons",
                    "to": "/src/ecommerce-commons"
                }
            ]
        }
    ]
}